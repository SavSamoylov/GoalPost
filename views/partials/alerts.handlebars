{{#if success_message}}
<div class="alert alert-success alert-dismissible fade show absoluteAlert" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <li>{{this.success_message}}</li>
</div>
{{/if}}
{{#if error_message}}
<div class="alert alert-danger alert-dismissible fade show absoluteAlert" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  {{#each this.error_message }}
  {{#if this.msg}}
  <li>{{this.msg}}</li>
  {{/if}}
  {{/each }}
</div>
{{/if}}

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show absoluteAlert" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>

  <li>{{error}}</li>

</div>
{{/if}}
