<!-- Modal -->
<div class="modal fade" id="updateGoalModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Goal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form class="update__Goal">
        <div class="modal-body">


          <div class="update__Goal-Msg">
            {{!-- Error Messages Will Show Here --}}
          </div>

          <div class="form-group">
            <label for="goal">Goal Title</label>
            <input type="name" class="form-control" id="goalTitleUpdate" name="goalTitleUpdate"  placeholder="I want to make a Snowman." required>
          </div>
          <div class="form-group">
            <label for="goalCategory">Goal Category</label>
            <select class="form-control" id="goalCategoryUpdate" name="goalCategoryUpdate">
              <option>Private</option>
              <option>Athletic</option>
              <option>Financial</option>
              <option>Personal</option>
              <option>Career</option>
            </select>
          </div>
          <div class="form-group">
            <label for="goalDescription">Goal Description</label>
            <textarea class="form-control" id="goalDescriptionUpdate" name="goalDescriptionUpdate" rows="3"></textarea>
          </div>
        </div>
        <input type="hidden" name="goalInfo" id="updateGoalInfo" value="">
        <div class="modal-footer">
          <button type="button" class="btn btn-primary update__Goal-Btn">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
