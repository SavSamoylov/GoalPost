{{>header}}

<div class="container">
  <div class="content-wrap">
    <div class="discover__Content">
      <div class="row">
        {{id}}
        {{#if user}}

        {{#each user.goal}}

        <div class="col-6">


          <div class="discover__Goal discover__Goal-{{id}} clearfix" data-goal-id="{{id}}" data-users-id="{{users_id}}">


            <div class="discover__Goal-Header clearfix">
              <div class="discover__Goal-Author">
                <div class="discover__Goal-AuthorImage discover__Goal-AuthorImage-{{users_id}}" style="background-color:{{users_color}}">
                  {{users_initials}}
                </div>
                <div class="discover__Goal-AuthorInfoBlock">
                  <div class="discover__Goal-AuthorName discover__Goal-AuthorName-{{users_id}}">
                  </div>
                  <div class="discover__Goal-Created">
                    <span>
                      Created {{createdAt}}
                    </span>
                  </div>
                </div>
              </div>
              <div class="goal__Options dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                  <button class="dropdown-item goal__Options-Edit" type="button" data-goal-author="{{users_id}}" data-goal-id="{{id}}">Edit</button>
                  <button class="dropdown-item goal__Options-Delete" type="button" data-delete-goal='{{id}}' data-author-id='{{users_id}}'>Delete</button>
                </div>
              </div>
            </div>

            <div class="discover__Goal-TitleBlock clearfix gradient-{{color}}">
              <a href="/goal/{{id}}" class="discover__Goal-Title">
                <span>{{title}}</span>
              </a>
            </div>




          </div> <!-- End Profile Goal -->





        </div>

        {{/each}}
        {{else}}
        no goals
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{>addGoalModal}}
